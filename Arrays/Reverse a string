you are given a string s. You need to reverse the string.

Example 1:

Input:
s = Geeks
Output: skeeG

CPP: in form of char array

#include <iostream>
#include <cstring>
using namespace std;

int main()
{
    
 char str[]="aishwarya";//string reverseWord(string str){
  int n=strlen(str);  
  for(int i=0;i<n/2;i++)
  {
      char t=str[i];
      str[i]=str[n-1-i];
      str[n-1-i]=t;
  }
  cout<<str;
    return 0;
}


cpp: string
string reverseWord(string str){
  int n=str.size();  
  for(int i=0;i<n/2;i++)
  {
      char t=str[i];
      str[i]=str[n-1-i];
      str[n-1-i]=t;
  }
  cout<<str;
}

in cpp:

string reverseWord(string str){
  int end=str.size()-1;
  int start=0;
  while(start<=end)
  {
      swap(str[start++],str[end--]);
  }
  cout<<str;
}

//in java...
//
class Reverse
{
    // Complete the function
    // str: input string
    public static String reverseWord(String str)
    {
        int n=str.length();  
        char ch[]=new char[n];
        for(int i=0;i<n;i++)            //or directly we can use ch=str.toCharArray(); 
        {
            ch[i]=str.charAt(i);
        }
     for(int i=0;i<n/2;i++)
     {
        char t=str.charAt(i);
        ch[i]=str.charAt(n-1-i);
        ch[n-1-i]=t;
     }
    
     str = new String(ch);
     return str;
     
    }
}
